<h2>会員編集画面</h2>

<%#3 form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "menbers/shared/error_messages", resource: resource %>
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        <table>
          <thead>
            <tr>
              <th>アイコン</th>
              <th><%= f.attachment_field :profile_image %></th>
            </tr>
            <tr>
              <th>名前</th>
              <th><%= f.text_field :name, nameautofocus: true, autocomplete: "name" %></th>
              <%# nameautofocusでデータを挿入後次の項目に移動、autocompleteで検索時に名前変換してくれる%>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <th><%= f.text_field :email, autocomplete: "email" %></th>
            </tr>
            <tr>
              <th>電話番号(ハイフンなし)</th>
              <th><%= f.text_field :telephone_number, autocomplete: "telephone_number" %></th>
            </tr>
            <tr>
              <th>郵便番号(ハイフンなし)〒</th>
              <th><%= f.text_field :postal_code, autocomplete: "postal_code" %></th>
            </tr>
            <tr>
              <th>住所</th>
              <th><%= f.text_field :address, autocomplete: "adderess" %></th>
            </tr>
            <tr>
              <th>パスワード(変更したくない場合は記述しないでください)</th>
              <th>
                <%= f.password_field :password, autocomplete: "new-password" %>
                <% if @minimum_password_length %>
                  <br />
                  <em><%= @minimum_password_length %> characters minimum</em>
                <% end %>
              </th>
            </tr>
            <tr>
              <th>パスワード(確認用)</th>
              <th><%= f.text_field :password_confirmation, autocomplete: "new-password" %></th>
            </tr>
            <tr>
              <th>パスワードを変更する場合は、変更前のパスワードを入力してください</th>
              <th><%= f.password_field :current_password, autocomplete: "current-password" %></th>
            </tr>
            <tr>
              <th></th>
              <th><%= f.submit "更新" %></th>    <%# 利用規約を追加するため追加時に遷移させる%>
            </tr>
          </thead>
        </table>
      </div>
    </div>
  </div>
<%# end %>
