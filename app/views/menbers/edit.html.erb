<div class ="container">
  <div class ="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <%= form_with model:@menber, url:menber_path, method: :patch, local:true do |f| %>
        <div class ="form-group">
          <span>名前</span>
          <%= f.text_field :name %>
        </div>
        <div class ="form-group">
          <span>アイコン</span>
          <%= f.attachment_field :image %>
        </div>
        <div class ="form-group">
          <span>コメント</span>
          <%= f.text_area :intorduction %>
        </div>
        <div class ="form-group">
          <%= f.submit "更新" %>
        </div>
      <% end %>
    </div>
  </div>
</div>