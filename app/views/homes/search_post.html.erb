<div class="container">
  <%= render 'homes/search', menber:@menbers, post:@posts, tags:@tag %>  <%#  部分テンプレート  render 'homes/search'～  homes/_search  _は勝手に消してくれる%>
  <div class="row">
    <div class="col-12-flex flex-lg-wrap">
      <h4 class="title">検索結果</h4>
    </div>
  </div>
  <div class="row"> <%# flex-nowrap %>
    <% @posts.each do |post| %>
      <% post_image = post.post_images.first %>
        <div class="col-3 search" >
          <%# binding.pry %>
          <%= link_to post_path(post.id) do %>
            <%= attachment_image_tag post_image, :image, :fill, 150, 150, fallback:'no_image.jpeg', style: "height:100%; width:100%;" %>
                                                     <%# fallback: 画像空欄時の代わりの画像,      style: ここで画像のサイズ指定しないと本来の画像のサイズになる%>
            <h4><%=post.name%></h4>
          <% end %>
        </div>
      <% end %>
    <%#$ end %>
  </div>
</div>